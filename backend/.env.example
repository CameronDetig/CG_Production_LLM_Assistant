# Environment variables for Lambda function
# Copy this to .env and fill in your actual values

# PostgreSQL Database Configuration
DB_HOST=your-rds-endpoint.xxxxx.us-east-1.rds.amazonaws.com
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_PORT=5432

# Note: AWS_REGION is automatically set by Lambda (uses deployment region)
# Only set AWS_REGION locally for testing
AWS_REGION=us-east-1

# Bedrock Model Configuration
BEDROCK_MODEL_ID=us.meta.llama4-scout-17b-instruct-v1:0

# DynamoDB Configuration (for conversation storage)
DYNAMODB_TABLE_NAME=cg-chatbot-conversations

# S3 Configuration (for thumbnail storage)
THUMBNAIL_BUCKET=cg-production-thumbnails
THUMBNAIL_URL_EXPIRATION=3600

# Cognito Configuration (for authentication)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# Streaming Configuration
# for backend testing can set this to false
ENABLE_STREAMING=true

# Deployment Configuration (for redeploy_image.sh script)
AWS_ACCOUNT_ID=001879457662
ECR_REGION=us-east-1
ECR_REPO_NAME=cg-chatbot
LAMBDA_FUNCTION_NAME=cg-production-chatbot

# LangSmith Configuration tracking LangGraph traces (optional)
# Sign up at https://smith.langchain.com/ and generate an API key
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=<lsv2_pt_your_api_key_here>
LANGCHAIN_PROJECT=cg-production-assistant
