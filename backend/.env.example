# Environment variables for AWS Lambda function
# Copy this to .env and fill in your actual values

# PostgreSQL Database Configuration
DB_HOST=your-rds-endpoint.xxxxx.us-east-1.rds.amazonaws.com
DB_NAME=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
SKIP_DB_INIT=false

# S3 Configuration (for thumbnail storage)
THUMBNAIL_BUCKET=cg-production-data-thumbnails

# Whether to enable llm to stream tokens as they are generated.
ENABLE_STREAMING=true

# Cognito Configuration (for user authentication)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# HuggingFace Configuration
HF_HOME=/tmp/huggingface

# Bedrock Model Configuration
BEDROCK_MODEL_ID=us.meta.llama4-scout-17b-instruct-v1:0

# AWS Deployment Configuration (for redeploy_image.sh script)
AWS_ACCOUNT_ID=your_aws_account_id
ECR_REGION=us-east-1
ECR_REPO_NAME=cg-chatbot
LAMBDA_FUNCTION_NAME=cg-production-chatbot

# LangSmith Configuration tracking LangGraph traces (optional)
# Sign up at https://smith.langchain.com/ and generate an API key
LANGCHAIN_API_KEY=lsv2_pt_your_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=cg-production-data-assistant